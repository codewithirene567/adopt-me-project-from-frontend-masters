{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react-hooks/recommended",
        "prettier"
    ],
    "rules": {
        "react/props-types": 0,
        "react/react-in-jsx-scope": 0
    },
    "plugins": ["react", "import", "jsx-a11y"],
    //make sure that it is exporting things, fundamental to accessibility
    "parser": "@babel/eslint-parser",
    //above line means before you read any of the code run it through babel
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
        "env":{
            "es6": true,
            "browser": true,
            "node": true
        },
        "settings": {
            "react":{
                "version": "dectect"
            }
        }
}